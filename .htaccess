# SimOwner.com.pk - Apache Configuration
# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Remove www (optional - uncomment if needed)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # Clean URL rewrites - Homepage
    RewriteRule ^$ index.php [L]
    
    # Clean URL rewrites - Pages
    RewriteRule ^jazz-sim-owner-details/?$ pages/jazz-sim-owner-details.php [L]
    RewriteRule ^zong-sim-owner-details/?$ pages/zong-sim-owner-details.php [L]
    RewriteRule ^ufone-sim-owner-details/?$ pages/ufone-sim-owner-details.php [L]
    RewriteRule ^telenor-sim-owner-details/?$ pages/telenor-sim-owner-details.php [L]
    RewriteRule ^pta-sim-verification/?$ pages/pta-sim-verification.php [L]
    RewriteRule ^check-block-unauthorized-sims/?$ pages/check-block-unauthorized-sims.php [L]
    RewriteRule ^cnic-information/?$ pages/cnic-information.php [L]
    RewriteRule ^live-tracker/?$ pages/live-tracker.php [L]
    RewriteRule ^sim-information/?$ pages/sim-information.php [L]
    RewriteRule ^sim-info/?$ pages/sim-info.php [L]
    RewriteRule ^sim-database/?$ pages/sim-database.php [L]
    RewriteRule ^pak-sim-data/?$ pages/pak-sim-data.php [L]
    RewriteRule ^faqs/?$ pages/faqs.php [L]
    RewriteRule ^privacy-policy/?$ pages/privacy-policy.php [L]
    RewriteRule ^contact-us/?$ pages/contact-us.php [L]
    RewriteRule ^disclaimer/?$ pages/disclaimer.php [L]
    
    # Remove .php extension from direct requests
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Cache Control for Static Assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
</IfModule>

# Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Disable Directory Browsing
Options -Indexes

# Prevent Access to Sensitive Files
<FilesMatch "^(config\.php|database\.sql|\.htaccess|\.git)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# PHP Configuration
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Custom Error Pages (optional - create these pages if needed)
# ErrorDocument 404 /404.php
# ErrorDocument 403 /403.php
# ErrorDocument 500 /500.php
